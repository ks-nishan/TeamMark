<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    tools:context=".DetailsParkingAreaActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/orange_500"
        android:layout_height="198dp">

        <TextView
            android:id="@+id/txtAreaTitle"
            android:layout_marginTop="20dp"
            android:textSize="26sp"
            android:textColor="#FFF"
            android:text="@string/parkingCreateTitle"
            android:textAlignment="center"
            android:layout_marginBottom="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="20dp"
            android:background="@color/orange_500"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_formcard"
            android:orientation="vertical"
            android:paddingTop="22dp"
            android:paddingBottom="22dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgParkingSlot"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:background="@drawable/bg_imgparking"
                    android:src="@drawable/imgadd"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/iconLocation"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/iclocation"/>

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Location"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/blue_800"
                        android:textSize="17sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/iconBikeFee"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icmotorcycle"/>

                    <TextView
                        android:id="@+id/txtBikeFee"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="BikeFee"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/blue_800"
                        android:textSize="17sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/lblPerHour1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="per hour"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/blue_800"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/iconCarFee"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/iccar"/>

                    <TextView
                        android:id="@+id/txtCarFee"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Car Fee"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/blue_800"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/lblPerHour2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="per hour"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/blue_800"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/iconChargingSpeed"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icbattery"/>

                    <TextView
                        android:id="@+id/txtChargingSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Charging Speed"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/blue_800"
                        android:textSize="17sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/lblPower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(kw)"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/blue_800"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/iconConnector"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icconnector"/>

                    <TextView
                        android:id="@+id/txtConnector"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Connector Type"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/blue_800"
                        android:textSize="17sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btnReserveArea"
                android:layout_marginTop="20dp"
                android:text="Reserve"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:background="@drawable/bg_btncreate"
                app:backgroundTint="@color/orange_500"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="55dp"/>

            <Button
                android:id="@+id/btnCalculate"
                android:layout_marginTop="14dp"
                android:text="Calcualte"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/bg_btncancel"
                app:backgroundTint="@color/blue_700"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="55dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>