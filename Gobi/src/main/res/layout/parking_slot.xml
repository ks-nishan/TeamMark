<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardElevation="8dp"
android:layout_margin="13dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/titleParkingArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titleParkingArea"
            android:gravity="left"
            android:textColor="@color/orange_500"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/locationParkingArea"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/addressParkingArea"
                    android:textColor="@color/blue_600"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                android:id="@+id/iconBikeSlots"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icmotorcycle"/>

                <ImageView
                    android:id="@+id/iconCarSlots"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/iccar"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp" />

                <ImageView
                    android:id="@+id/iconEVFacility"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/iccharging"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgArea"
            android:layout_width="match_parent"
            android:layout_height="275dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_btncreate"
            android:padding="8dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/iconBikeFee"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/icmotorcycle"
                android:backgroundTint="@color/blue_800"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/feeBike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btncreate"
                android:text="100Rs/hr"
                android:textColor="@color/blue_800"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:gravity="left"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_btncreate"
            android:padding="8dp"
            android:layout_marginLeft="30dp">

            <ImageView
                android:id="@+id/iconCarFee"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="8dp"
                android:layout_gravity="center"
                android:background="@drawable/iccar"
                android:backgroundTint="@color/blue_800"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/feeCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btncreate"
                android:text="100Rs/hr"
                android:textColor="@color/blue_800"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:gravity="left"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>