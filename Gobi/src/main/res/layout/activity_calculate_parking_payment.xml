<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    tools:context=".CalculateParkingPaymentActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/orange_500"
        android:layout_height="198dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleParkingPayment"
                    android:layout_marginTop="20dp"
                    android:textSize="32sp"
                    android:textColor="#FFF"
                    android:text="Calculate Payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/subTitleParkingPayment"
                    android:textSize="18sp"
                    android:textColor="@color/blue_600"
                    android:layout_marginTop="8dp"
                    android:text="Calculate Personalized ParkingPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            android:background="@color/orange_500"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/lblRupess"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="RS. "
                android:textColor="@color/blue_800"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edtTotal"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="5"
                android:background="@drawable/bg_inputtask"
                android:hint="0.00"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/blue_600"
                android:textColorHint="#B5B5B5" />

        </LinearLayout>

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="16dp"
           android:layout_marginTop="40dp"
           android:layout_marginRight="16dp"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/lblEVFacility"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:text="Vehicle Type: "
               android:textColor="@color/blue_800"
               android:textSize="20sp"
               android:layout_gravity="center"/>

           <RadioGroup
               android:id="@+id/radVehicleType"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <RadioButton
                   android:id="@+id/radBike"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:checked="false"
                   android:text="Bike"
                   android:layout_marginLeft="30dp"
                   android:textSize="18sp" />

               <RadioButton
                   android:id="@+id/radCar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="70dp"
                   android:checked="false"
                   android:text="Car"
                   android:textSize="18sp" />
           </RadioGroup>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="40dp"
           android:layout_marginLeft="16dp"
           android:layout_marginRight="16dp"
           android:orientation="vertical">

           <TextView
               android:id="@+id/lblParkingTimeTitle"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:text="Parking Time: "
               android:textColor="@color/blue_800"
               android:textSize="20sp" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <EditText
                   android:id="@+id/edtHours"
                   android:layout_width="0dp"
                   android:layout_height="55dp"
                   android:layout_weight="5"
                   android:background="@drawable/bg_inputtask"
                   android:hint="Hours"
                   android:inputType="text"
                   android:paddingLeft="12dp"
                   android:layout_marginRight="5dp"
                   android:textColor="@color/blue_600"
                   android:textColorHint="#B5B5B5" />

               <TextView
                   android:id="@+id/lblColon"
                   android:layout_width="1dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_marginBottom="10dp"
                   android:text=" : "
                   android:textAlignment="center"
                   android:textColor="@color/blue_800"
                   android:textSize="24sp"
                   android:textStyle="bold"/>

               <EditText
                   android:id="@+id/edtMinutes"
                   android:layout_width="0dp"
                   android:layout_height="55dp"
                   android:layout_weight="5"
                   android:background="@drawable/bg_inputtask"
                   android:hint="Minutes"
                   android:inputType="text"
                   android:paddingLeft="12dp"
                   android:layout_marginLeft="5dp"
                   android:textColor="@color/blue_600"
                   android:textColorHint="#B5B5B5" />

           </LinearLayout>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="16dp"
           android:layout_marginTop="40dp"
           android:layout_marginRight="16dp"
           android:orientation="vertical">

           <TextView
               android:id="@+id/lblWatt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:text="@string/lblWatt"
               android:textColor="@color/blue_800"
               android:textSize="20sp" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <CheckBox
                   android:id="@+id/chkWattNone"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="None"
                   android:textSize="18sp" />

               <CheckBox
                   android:id="@+id/chkWattMin"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="@string/chkWattMin"
                   android:textSize="18sp" />

               <CheckBox
                   android:id="@+id/chkWattMed"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="@string/chkWattMed"
                   android:textSize="18sp" />

               <CheckBox
                   android:id="@+id/chkWattMax"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="@string/chkWattMax"
                   android:textSize="18sp" />

           </LinearLayout>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="16dp"
           android:layout_marginTop="50dp"
           android:layout_marginRight="16dp"
           android:orientation="vertical">

           <Button
               android:id="@+id/btnCalcTotal"
               android:text="Calculate"
               android:textColor="#FFFFFF"
               android:textAllCaps="false"
               android:background="@drawable/bg_btncreate"
               app:backgroundTint="@color/orange_500"
               android:textSize="22sp"
               android:layout_width="match_parent"
               android:layout_height="55dp"/>

       </LinearLayout>

   </LinearLayout>

</LinearLayout>