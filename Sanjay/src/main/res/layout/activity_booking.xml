<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Booking">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="80dp"
        android:text="@string/Book"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:background="@color/gray1" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="407dp"
        android:layout_height="233dp"
        app:srcCompat="@drawable/bookin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="-50dp"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/yellow"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"

                    android:text="@string/PickupLocation"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/loc"

                    />
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="189dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="200dp"

                     />

                <TextView
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"

                    android:text="@string/PickupDate"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/date2"

                    />
                <EditText
                    android:layout_width="150dp"
                    android:layout_marginTop="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/PickUpDate"
                    ></EditText>

                <TextView
                    android:layout_marginTop="110dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"

                    android:text="@string/returns"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/date"

                    />
                <EditText
                    android:layout_width="150dp"
                    android:layout_marginTop="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/ReturnDate"
                    ></EditText>

                <TextView
                    android:layout_marginTop="160dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7dp"

                    android:text="@string/model"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/car"

                    />
                <EditText
                    android:layout_width="150dp"
                    android:layout_marginTop="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:editable="false"
                    android:id="@+id/Car_Model"

                    ></EditText>

                <TextView
                    android:layout_marginTop="199dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7dp"

                    android:text="COUPON"
                    android:textSize="20dp"


                    />

                <EditText
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="185dp"

                    android:id="@+id/Calculate_Coupon"
                    android:text=""></EditText>


<Button
    android:layout_width="50dp"
    android:id="@+id/Calculate_Booking"
    android:layout_height="50dp"
    android:layout_marginTop="195dp"
    android:layout_marginLeft="290dp"
    android:backgroundTint="@color/transparent"
    android:drawableBottom="@drawable/submit"
    ></Button>









            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
   android:layout_marginTop="-30dp"
        android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:text="VEHICLE CHARGE :"
                    android:textSize="20dp">

                </TextView>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  android:id="@+id/Charge_of_vehicle"
                    android:textSize="20dp"
                    android:layout_marginLeft="250dp">

                </TextView>

                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TAX :"
                    android:textSize="20dp"
                    android:layout_marginLeft="50dp">

                </TextView>
                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
          android:id="@+id/Calculate_Tax"
                    android:textSize="20dp"
                    android:layout_marginLeft="250dp">


                </TextView>

                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DISCOUNT :"
                    android:textSize="20dp"
                    android:layout_marginLeft="50dp">

                </TextView>
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:id="@+id/Calculate_Discount"
                    android:textSize="20dp"
                    android:layout_marginLeft="250dp">


                </TextView>


                <View
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="100dp"
                    android:background="@color/gray1" />
                <TextView
                    android:layout_marginTop="110dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOTAL :"
                    android:textSize="20dp"
                    android:layout_marginLeft="50dp">

                </TextView>
                <TextView
                    android:layout_marginTop="110dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="20dp"
                    android:layout_marginLeft="250dp"
                    android:id="@+id/Calculate_Total"
                    >

                </TextView>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/Reserve_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="RESERVE"
            app:backgroundTint="@color/gray3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.909"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.491" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>