<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PastOrder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white"
        android:padding="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/booking"></ImageView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:layout_margin="1dp"

            android:layout_weight="1"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/PickupDate">

                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:id="@+id/Search_Date"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                   >

                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:text="@string/PickupLocation">

                </TextView>

                <Spinner
                    android:id="@+id/Search_Date_Location"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="120dp"

                    android:layout_marginTop="45dp"
                    android:scrollbarSize="5dp"></Spinner>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:text="@string/model">

                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="65dp"
          android:id="@+id/Search_MODEL">

                </EditText>

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="105dp"
                    android:drawableLeft="@drawable/search"
               android:id="@+id/PastOrder_SearchButton"
                    android:text=""
                    app:backgroundTint="@color/yellow">

                </Button>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView

            android:layout_width="369dp"
            android:layout_height="369dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:elevation="100dp"
            app:cardBackgroundColor="@color/transparent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="380dp">

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/PickupDate"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/date2"

                    />
                <TextView
                    android:layout_width="150dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:textSize="25dp"
                   android:id="@+id/PastOrder_Date"
                    >

                </TextView>
                <View
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="38dp"
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:background="@color/gray1"/>
                <TextView
                    android:layout_marginTop="95dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="Booking ID"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/name"

                    />
                <EditText
                    android:layout_width="150dp"
                    android:layout_marginTop="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
               android:id="@+id/PastOrder_bookingId"
                    ></EditText>

                <TextView
                    android:layout_marginTop="145dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/Phone"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/phone"
                    />
                <EditText
                    android:layout_width="150dp"
                    android:layout_marginTop="135dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:id="@+id/PastOrder_phone"
                    ></EditText>
                <TextView
                    android:layout_marginTop="195dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/CarModel"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/car"></TextView>
"

                    />
                <EditText
                    android:layout_width="150dp"
                    android:layout_marginTop="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:id="@+id/PastOrder_Model"
                    ></EditText>
                <TextView
                    android:layout_marginTop="245dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="Location"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/loc"></TextView>


                />
                <EditText
                    android:layout_width="150dp"
                    android:layout_marginTop="235dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:id="@+id/PastOrder_Location"

                    ></EditText>

                <View
                    android:layout_marginTop="290dp"
                    android:layout_marginLeft="38dp"
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:background="@color/gray1"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_marginTop="298dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="25dp"
                    android:text="@string/lkr"
                    ></TextView>
                <TextView
                    android:layout_width="150dp"
                    android:layout_marginTop="298dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:textSize="25dp"
                  android:id="@+id/PastOrder_Total"
                    ></TextView>

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/PastOrder_Deletebutton"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="298dp"
                    android:backgroundTint="@color/transparent"
                    android:drawableBottom="@drawable/delete"

                    >


                </Button>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>







    </LinearLayout>


</LinearLayout>
