<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:backgroundTint="#fff44f"
    app:cardCornerRadius="15dp"
    android:layout_margin="13dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="70px"
            android:src="@drawable/benzz_adobespark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:id="@+id/title_text"
            android:layout_toRightOf="@+id/img1"/>

        <ImageView
            android:id="@+id/card1LocationImg"
            android:src="@drawable/location_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/title_text"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="District"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="8dp"
        android:id="@+id/district_text"
        android:layout_below="@id/title_text"
        android:layout_toRightOf="@+id/card1LocationImg"/>

        <ImageView
            android:id="@+id/card1PersonImg"
            android:src="@drawable/person_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/district_text"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Persons"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="8dp"
        android:id="@+id/person_text"
        android:layout_below="@id/district_text"
        android:layout_toRightOf="@+id/card1PersonImg"/>

        <ImageView
            android:id="@+id/card1MoneyImg"
            android:src="@drawable/money_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/person_text"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="8dp"
        android:id="@+id/amount_text"
        android:layout_below="@+id/person_text"
        android:layout_toRightOf="@+id/card1MoneyImg"/>

        <ImageView
            android:id="@+id/card1phone"
            android:src="@drawable/mobile_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/amount_text"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="8dp"
            android:id="@+id/mobile_text"
            android:layout_below="@+id/amount_text"
            android:layout_toRightOf="@+id/card1phone"/>

        <ImageView
            android:id="@+id/card1engine"
            android:src="@drawable/engineering"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/mobile_text"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engine"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="8dp"
            android:id="@+id/engine_text"
            android:layout_below="@id/mobile_text"
            android:layout_toRightOf="@+id/card1engine"/>

        <ImageView
            android:id="@+id/delImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/leftmessage"
            android:rotation="180"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textStyle="italic"
            android:layout_toRightOf="@+id/delImg"/>

        <ImageView
            android:id="@+id/edtImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/redo"
            android:layout_toRightOf="@+id/engine_text"
            android:layout_below="@+id/mobile_text"
            android:layout_marginLeft="185px"
            android:rotation="180"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/engine_text"
            android:layout_marginLeft="5px"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="-80dp"
            android:layout_toLeftOf="@+id/edtImg"
            android:text="Update"
            android:textStyle="italic" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>