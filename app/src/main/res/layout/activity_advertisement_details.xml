<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f9AA33">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:src="@drawable/mad_logo_trans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark Rents"
                android:textStyle="bold|italic"
                android:layout_toRightOf="@+id/imgLogo"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_alignParentRight="true"
                android:src="@drawable/user_icon"
                android:layout_width="60dp"
                android:layout_height="45dp"
                />

            <EditText
                android:id="@+id/editTxtSerch"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:background="@drawable/custome_edit_txt"
                android:hint="        Search"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/logo"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="59dp"
                android:src="@drawable/serch_icon"
                android:layout_marginLeft="5dp"/>


        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:id="@+id/card1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:src="@drawable/blue_car"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/card1Txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="6dp"
                        android:text="@string/mazda_z_for_rent"
                        android:textColor="@color/black"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        android:layout_below="@+id/img1"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/card1Txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card1Txt1"
                        android:text="@string/_4_person"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="36dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/card1txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card1Txt2"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="36dp"
                        android:text="@string/gampaha"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/card1txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card1txt3"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="36dp"
                        android:text="@string/_2400cc"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/card1txt5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card1txt4"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="6dp"
                        android:text="Petrol"
                        android:layout_toRightOf="@+id/card1CalanderImg"
                        android:layout_marginRight="8dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/card1Txt6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lkr_3000_per_day"
                        android:layout_below="@id/card1txt5"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="36dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/card1Txt7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_077_1946228"
                        android:layout_below="@+id/card1Txt6"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="36dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/card1Txt8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_011_8923446"
                        android:layout_below="@+id/card1Txt7"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="36dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/card1Txt9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:layout_below="@+id/card1Txt8"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="36dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/card1Txt10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/some_description_about_the_car"
                        android:layout_below="@+id/card1Txt9"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="56dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>




                    <ImageView
                        android:id="@+id/card1PersonImg"
                        android:src="@drawable/person_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/card1Txt1"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="16dp"/>

                    <ImageView
                        android:id="@+id/card1LocationImg"
                        android:src="@drawable/location_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/card1Txt2"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="16dp"/>

                    <ImageView
                        android:id="@+id/card1EnginImg"
                        android:src="@drawable/engin_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/card1LocationImg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="16dp"/>

                    <ImageView
                        android:id="@+id/card1CalanderImg"
                        android:src="@drawable/fuel"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/card1EnginImg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="12dp"/>

                    <ImageView
                        android:id="@+id/card1MoneyImg"
                        android:src="@drawable/money_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/card1CalanderImg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="12dp"/>

                    <ImageView
                        android:id="@+id/card1PhoneImg"
                        android:src="@drawable/mobile_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/card1MoneyImg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="12dp"/>

                    <ImageView
                        android:id="@+id/card1TelephoneImg"
                        android:src="@drawable/teliphone_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/card1PhoneImg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="12dp"/>

                    <ImageView
                        android:id="@+id/card1DescriptionImg"
                        android:src="@drawable/description_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/card1TelephoneImg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="12dp"/>

                    <Button
                        android:id="@+id/btnResave"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/card1Txt10"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="60dp"
                        android:text= "reserve"
                        android:layout_marginTop="12dp" />

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/btnResave"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:text="@string/promote"
                        android:layout_marginTop="12dp"
                        app:backgroundTint="#4A6572" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>// end of advertisement details



        <TextView
            android:id="@+id/txtRecomandat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomandat for You"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="6dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#344955"/>

        //-------------------Horizontal Card view start------------------------------------

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="163dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/HorCard1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#D3D3D3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/card1Img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/hornat_adobespark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card1Img"
                            android:layout_marginTop="6dp"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="#4A6572"
                            android:text="@string/hornat_for_rent"
                            />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                //-------------------horizontal card 2 start-----------------------

                <androidx.cardview.widget.CardView
                    android:id="@+id/HorCard2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#D3D3D3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/card2Img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/white_benz" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card2Img"
                            android:layout_marginTop="6dp"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="#4A6572"
                            android:text="@string/audi_for_rent"
                             />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                //-------------------horizontal card 3 start-----------------------

                <androidx.cardview.widget.CardView
                    android:id="@+id/HorCard3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#D3D3D3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/card3Img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/red_scorty" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card3Img"
                            android:text="@string/scorty_for_rent"
                            android:layout_marginTop="6dp"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="#4A6572"
                             />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                //-------------------horizontal card 4 start-----------------------

                <androidx.cardview.widget.CardView
                    android:id="@+id/HorCard4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#D3D3D3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/card4Img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/vezal_adobespark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card4Img"
                            android:layout_marginTop="6dp"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="#4A6572"
                            android:text="@string/vezal_for_rent"
                             />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                //-------------------horizontal card 5start-----------------------

                <androidx.cardview.widget.CardView
                    android:id="@+id/HorCard5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#D3D3D3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/card5Img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/benzz_adobespark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card5Img"
                            android:layout_marginTop="6dp"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="#4A6572"
                            android:text="@string/benz_for_rent"
                             />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="all rights resived @2022"
            android:textSize="14dp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="22dp"/>


    </LinearLayout>

</ScrollView>